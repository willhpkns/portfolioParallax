# Environment Configuration for Production VPS Deployment

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://admin:your_password@localhost:27017/portfolio?authSource=admin

# JWT Configuration - IMPORTANT: Generate strong secrets for production
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
JWT_REFRESH_SECRET=your_even_more_secure_refresh_secret_here_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=https://willhpkns.soon.it,http://localhost:5173

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_TIMEOUT=900000

# Admin Configuration (for initial setup only)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

